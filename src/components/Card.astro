---
interface Props {
    href: string;
    image: string;
    title: string;
    body: string;
    technologies: string[];
}

const { href, image, title, body, technologies } = Astro.props;
---
<li class="link-card">
    <a href={href} target="_blank">
        <div class="img">
            <img width="226" height="127" src={image} class="card-img" alt="ProjectImage">
        </div>
		<h3 class="card-title">
			{title}
		</h3>
		<p class="card-txt">
			{body}
		</p>
        <p class="card-txt">Tecnologias utilizadas:</p>
        <ul class="card-txt">
            {technologies.map(technology => (
                <li>{technology}</li>
            ))}
        </ul>
	</a>
</li>
<style>
    .link-card {
        list-style: none;
        display: flex;
        background-size: 400%;
        padding: 20px;
    }

    .link-card > a {
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        border-radius: 8px;
        color: #eac195;
    }

    .img {
        text-align: center;
    }

    img {
        border-radius: 16px;
    }

    h3 {
        margin: 0;
        font-family: 'Josefin Sans', sans-serif;
        font-size: 1.5rem;
        font-weight: normal;
        text-align: center;
    }

    p {
        font-size: 1em;
        line-height: 1.5;
        text-indent: 0;
        text-align: start;
        margin: 0.5rem 0 0;
    }

    ul {
        padding-left: 20px;
        margin: 0.5em;
        font-family: 'Josefin Sans', sans-serif;
        font-size: 1em;
        font-weight: normal;
        text-align: start;
    }

    .link-card:hover {
        transform: scale(1.05);
    }
</style>
